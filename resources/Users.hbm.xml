<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="library.entities.User" table="users">
        <meta attribute="class-description">
            This class contains details about a type book
        </meta>

        <!--Add id for the key -->
        <id name="userId" type="int"
            column="user_id">
            <generator class="native"/>
        </id>
        <!--Add a property for all other instance variables/columns-->
        <property name="firstName" column="first_name"
                  type="string"/>
        <property name="lastName" column="last_name"
                  type="string"/>
        <property name="addressOne" column="address_one"
                  type="string"/>
        <property name="addressTwo" column="address_two"
                  type="string"/>
        <property name="birthday" column="birthday"
                  type="date"/>
        <property name="email" column="email"
                  type="string"/>
        <property name="phone" column="phone_number"
                  type="string"/>
        <property name="password" column="password"
                  type="string"/>
        <property name="state" column="state"
                  type="string"/>
        <property name="city" column="city"
                  type="string"/>
        <property name="fees" column="fees"
                  type="float"/>
    </class>

</hibernate-mapping>