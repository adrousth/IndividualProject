<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="library.entities.Rental" table="rentals">
        <meta attribute="class-description">
            This class contains details about a type book
        </meta>

        <!--Add id for the key -->
        <id name="rentalId" type="int"
            column="rental_id">
        </id>

        <!--Add a property for all other instance variables/columns-->
         <!--<property name="userId" column="user_id"
                  type="int"/>-->
        <property name="bookNumber" column="book_number"
                  type="int"/>
        <property name="checkoutDate" column="checkout_date"
                  type="date"/>
        <property name="rentalTime" column="rental_time"
                  type="int"/>
        <property name="returnDate" column="return_date"
                  type="date"/>
        <property name="fees" column="fees"
                  type="float"/>
        <property name="feesInfo" column="fees_info"
                  type="text"/>
        <property name="userId" column="user_id"
                  type="int"/>
        <property name="isbn" column="isbn"
                  type="int"/>
        <!--<many-to-one name="userId" class="library.entities.User" column="user_id"/>-->
        <!--<many-to-one name="isbn" class="library.entities.Book" column="isbn"/>-->
    </class>

</hibernate-mapping>