<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="library.entities.Book" table="books">
        <meta attribute="class-description">
            This class contains details about a type book
        </meta>

        <!--Add id for the key -->
        <id name="isbn" type="string"
            column="isbn">
        </id>
        <!--Add a property for all other instance variables/columns-->
        <property name="title" column="title"
                  type="string"/>
        <property name="publisher" column="publisher"
                  type="string"/>
        <property name="publishYear" column="publish_year"
                  type="string" />
        <property name="edition" column="edition"
                  type="string" />
        <property name="copies" column="copies"
                  type="int" />
        <property name="availableCopies" column="copies_available"
                  type="int" />

        <property name="numberPages" column="number_pages"
                  type="string" />
        <property name="format" column="format"
                  type="string" />
        <property name="description" column="description"
                  type="string" />

        <set table="book_authors" name="authors">
            <key column="isbn"/>
            <many-to-many column="author_id" class="library.entities.Author"/>
        </set>
        <set table="book_categories" name="categories">
            <key column="book_isbn"/>
            <many-to-many column="book_category" class="library.entities.Category"/>
        </set>

    </class>

</hibernate-mapping>